    [Parameter]
    public EventCallback<int> DeleteMedia { get; set; }

    IReadOnlyList<EnumExtensions.ListItem> MediaTypes = EnumExtensions.GetDropdownList<MediaEnums.MediaTypeEnum>.Items;
