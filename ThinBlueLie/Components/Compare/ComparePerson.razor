@typeparam TPerson
@inject AutoMapper.IMapper Mapper

<div class="row">
    <div class="col-6 ">
        @* One side will only be null if displayed alone, on creation it will be displayed with the event it was created with *@
        @if (OldPerson != null)
        {
        <ComparePersonCommon IsOriginal="true" Person="Mapper.Map<TPerson, CommonPerson>(OldPerson)" OtherPerson="Mapper.Map<TPerson, CommonPerson>(NewPerson)"></ComparePersonCommon>
        }
    </div>
    <div class="col-6">
        @if (NewPerson != null)
        {
            <ComparePersonCommon IsOriginal="false" Person="Mapper.Map<TPerson, CommonPerson>(NewPerson)" OtherPerson="Mapper.Map<TPerson, CommonPerson>(OldPerson)"></ComparePersonCommon>
        }
    </div>
</div>

@code {
    [Parameter]
    public TPerson OldPerson { get; set; }
    [Parameter]
    public TPerson NewPerson { get; set; }
    
}
