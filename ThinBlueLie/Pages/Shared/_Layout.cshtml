<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThinBlueLie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark mb-3">
            <div class="d-flex flex-grow-1 container-fluid" >
                <a class="navbar-brand text-white" href="/Index">
                    <img id="logo" alt="" src="/ThinBlueLieLogo.png"  width="35" height="35" class="d-inline-block">
                    <span>Thin Blue Lie</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse text-right d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Timeline">Timeline</a>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Officers">Officers</a>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Solutions">Solutions</a>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/History">History</a>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Statistics">Statistics</a>
                    </ul>
                </div>
                <div class="navbar-collapse collapse text-right d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Donate">Donate</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <style type="text/css">
        body {
            background: #0b0c0d !important;
        }        
        /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
    </style>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
