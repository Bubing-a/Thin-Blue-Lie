@using Microsoft.AspNetCore.Identity; 
@inject SignInManager<IdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-signin-scope" content="profile email">
    <meta name="google-signin-client_id" content="394077889019-i50ldubor11lftmjksjn5ul9ub659sp5.apps.googleusercontent.com">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/ColorPallete.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />

</head>
<body class="noscrollbar">
    <header>
        <nav class="navbar fixed-top navbar-expand-md navbar-toggleable-md navbar-light bg-dark mb-3">
            <div class="d-flex flex-grow-1 container-fluid">
                <a class="navbar-brand text-white" href="/Index">
                    <img id="logo" alt="" src="/ThinBlueLieLogo.png" width="35" height="35" class="d-inline-block">
                    <span style="white-space: nowrap;" class="d-inline-block">Thin Blue Lie</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse text-right d-md-inline-flex flex-md-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" id="Timeline">
                            <a class="nav-link text-white text-responsive" asp-action="Timeline" asp-controller="Timeline">Timeline</a>
                        <li class="nav-item" id="Solutions">
                            <a class="nav-link text-white" asp-page="/Solutions">Solutions</a>
                        <li class="nav-item" id="Resources">
                            <a class="nav-link text-white" asp-page="/Resources">Resources</a>
                        <li class="nav-item" id="About">
                            <a class="nav-link text-white" asp-page="/About">About</a>
                    </ul>
                </div>
                <div class="navbar-collapse collapse text-right d-md-inline-flex flex-md-row-reverse mr-md-3">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Feedback
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Incorrect information?</a>
                                <a class="dropdown-item" href="#">General Feedback</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Contact</a>
                            </div>
                        </li>
                        <li class="nav-item" id="Submit">
                            <a class="btn btn-outline-success mr-md-2 mb-md-0 mb-2 text-nowrap" href="/Submit">Submit Info</a>
                        </li>
                        <li class="nav-item" id="Donate">
                            <a class="btn btn-outline-primary text-nowrap" asp-page="/Donate">Donate</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>                   
                </div>
            </div>
        </nav>
    </header>
    <div class="nogap container-fluid">
        <main>
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
    <script>       
        
    </script>
    <script src="https://apis.google.com/js/platform.js?onload=init" async defer></script>
</body>

</html>
